<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<!-- tag::parentTag[] -->
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.5.5</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>
	<!-- end::parentTag[] -->
	<groupId>com.marcobehler</groupId>
	<artifactId>myfancypdfinvoices-springboot</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>myfancypdfinvoices-springboot</name>
	<description>Demo project for Spring Boot</description>

	<!-- tag::propertiesTag[] -->
	<properties>
		<java.version>17</java.version>
	</properties>
	<!-- end::propertiesTag[] -->

	<!-- tag::dependenciesTag[] -->
	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter</artifactId>
		</dependency>

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>

		<!-- tag::starter-spring-boot-databases[] -->
		<dependency>
			<groupId>org.springframework.boot</groupId> <!--1-->
			<artifactId>spring-boot-starter-jdbc</artifactId>
		</dependency>

		<dependency>
			<groupId>com.h2database</groupId> <!--2-->
			<artifactId>h2</artifactId>
		</dependency>
		<!-- end::starter-spring-boot-databases[] -->

		<!-- tag::starter-validation[] -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-validation</artifactId>
		</dependency>
		<!-- end::starter-validation[] -->

		<!-- tag::jackson-xml[] -->
		<dependency>
			<groupId>com.fasterxml.jackson.dataformat</groupId>
			<artifactId>jackson-dataformat-xml</artifactId>
		</dependency>
		<!-- end::jackson-xml[] -->


		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
			<exclusions>
				<exclusion>
					<groupId>org.junit.vintage</groupId>
					<artifactId>junit-vintage-engine</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>
	<!-- end::dependenciesTag[] -->

	<!-- tag::pluginsTag[] -->
	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
	<!-- end::pluginsTag[] -->

</project>
